@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>SİL</th>

    </tr>
    @foreach (var odunc in Model)
    {
        <tr>
            <td>@odunc.ID</td>
            <td></td>
            <td></td>
            <td></td>
            <td>@Convert.ToDateTime(odunc.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(odunc.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@odunc.ID" class="btn btn-default" style="background-color:#64d8ca ; color:white">Kitabı İade Et</a></td>
        </tr>
    }
</table>



