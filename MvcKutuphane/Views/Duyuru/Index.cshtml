@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}
<!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>İçerik</th>
    </tr>
    @foreach (var duyuru in Model)
    {
        if (duyuru.KATEGORI == "Diğer")
        {
            renk = "bg-info text-white";
        }
        if (duyuru.KATEGORI == "Yeni Kitap")
        {
            renk = "bg-warning text-white";
        }
        if (duyuru.KATEGORI == "İletişim")
        {
            renk = "bg-success text-white";
        }
        if (duyuru.KATEGORI == "Kitapları Geciktirmeyin")
        {
            renk = "bg-danger text-white";
        }
        <tr class="@renk">
            <td>@duyuru.ID</td>
            <td>@duyuru.KATEGORI</td>
            <td>@Convert.ToDateTime(duyuru.TARIH).ToString("dd/MM/")</td>
            <td><a href="/Duyuru/DuyuruSil/@duyuru.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Duyuru/DuyuruDetay/@duyuru.ID" class="btn btn-default" style="background-color:skyblue">DETAYLAR</a></td>
        </tr>
    }
</table>
<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>