@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout.cshtml";
    }

    <h2>İadesi Alınan Kitap Listesi</h2>
    <table class="table table-bordered">
        <tr>
            <th>İşlem ID</th>
            <th>Kitap Adı</th>
            <th>Üye</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>Üyenin Getirdiği Tarihi</th>
            <th>Detaylar</th>

        </tr>
        @foreach (var odunc in Model)
        {
            <tr>
                <td>@odunc.ID</td>
                <td></td>
                <td></td>
                <td></td>
                <td>@Convert.ToDateTime(odunc.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(odunc.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
                <td><a href="/Odunc/Odunciade/@odunc.ID" class="btn btn-default" style="background-color:#f87cdf ; color:white">Detaylar</a></td>
            </tr>
        }
    </table>





